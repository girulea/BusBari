<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primarySurfaceColor"
    android:id="@+id/container_lines">

        <TextView
            android:text="@string/linee_passanti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:padding="8dp"
            android:textColor="@color/textColorProject" />

    <com.example.root.amtab.Utility.MyGridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lineList_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="50dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:scrollbars="none"
        android:horizontalSpacing="1dp" />

</LinearLayout>