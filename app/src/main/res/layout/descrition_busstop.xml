<GridLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:layout_alignParentRight="true"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    android:paddingLeft="16dp"
    android:id="@+id/descrition_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/primarySurfaceColor">

    <TextView
        android:text="37 metri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDistance"
        android:textSize="13sp"
        android:textColor="@color/textColorProject"
        android:layout_column="1"
        android:layout_gravity="right" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="right"
        android:paddingTop="8dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/maps_border_white36dp"
            android:id="@+id/navigationButton"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_gravity="right"
            android:paddingRight="8dp"
            android:paddingLeft="8dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/favorite_border_white36dp"
            android:id="@+id/favoriteButton"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_gravity="right"
            android:focusable="false" />
    </LinearLayout>

</GridLayout>